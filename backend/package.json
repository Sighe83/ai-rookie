{
  "name": "ai-rookie-backend",
  "version": "1.0.0",
  "description": "Backend API for AI Rookie platform - Google Cloud Optimized",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "echo 'No build step required'",
    "postinstall": "npx prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "node src/database/seed.js",
    "db:reset": "prisma migrate reset --force",
    "test": "jest",
    "gcp:deploy": "gcloud run deploy ai-rookie-backend --source . --platform managed --region europe-north1 --allow-unauthenticated",
    "gcp:build": "gcloud builds submit --config cloudbuild.yaml",
    "gcp:logs": "gcloud run services logs read ai-rookie-backend --region europe-north1",
    "docker:build": "docker build -t ai-rookie-backend .",
    "docker:run": "docker run -p 8080:8080 --env-file .env ai-rookie-backend",
    "setup:secrets": "node scripts/setup-secrets.js",
    "setup:storage": "node scripts/setup-storage.js"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@google-cloud/secret-manager": "^5.0.0",
    "@google-cloud/storage": "^7.7.0",
    "@google-cloud/pubsub": "^4.1.0",
    "@google-cloud/logging": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "sharp": "^0.33.0",
    "stripe": "^18.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "ai",
    "tutoring",
    "booking",
    "api",
    "express",
    "google-cloud",
    "cloud-run",
    "microservices"
  ],
  "author": "AI Rookie Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0 <21.0.0",
    "npm": ">=9.0.0"
  }
}